<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:clipChildren="false">

    <!-- Main profile card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Image -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/nameAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!--            <ImageButton-->
            <!--                android:id="@+id/button_more_info"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="?attr/selectableItemBackgroundBorderless"-->
            <!--                android:src="@drawable/ic_icon"-->
            <!--                app:layout_constraintBottom_toBottomOf="@id/profileCard"-->
            <!--                app:layout_constraintEnd_toEndOf="@id/profileCard"-->
            <!--                app:layout_constraintStart_toStartOf="@id/profileCard" />-->
        </LinearLayout>
        <!-- More Info Button -->
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Additional Information Layout -->
        <LinearLayout
            android:id="@+id/profileInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- Example of additional information content -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed profile information goes here. This can include biography, interests, and more."
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <!-- Dog Image as a floating element above the card -->
    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profileCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <!-- The swipe up bio will be a hidden LinearLayout or another overlay that appears on swipe -->

</androidx.constraintlayout.widget.ConstraintLayout>